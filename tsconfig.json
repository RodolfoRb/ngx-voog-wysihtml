{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib/out-tsc",
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "example/**/*",
    "node_modules/**/*"
  ],
  "filesGlob": [
    "!node_modules/**/*"
  ]
}
